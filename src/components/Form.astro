---
// ContactSection.astro
import Layout from "../layouts/Layout.astro"

// Definimos los códigos de país y ejemplos de números
const phoneData = {
  PY: { code: "+595", example: "(+595) 981 123 456" },
  AR: { code: "+54", example: "(+54) 11 1234 5678" },
  BR: { code: "+55", example: "(+55) 11 91234 5678" },
  UY: { code: "+598", example: "(+598) 99 123 456" },
  CL: { code: "+56", example: "(+56) 9 1234 5678" }
};
---

<section class="bg-black text-white py-16" id="contacto">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Imagen izquierda -->
        <div class="flex items-center justify-center">
          <img 
            src="/img/fondo3.png" 
            alt="Persona trabajando en laptop" 
            class="w-full max-w-md rounded-md"
          />
        </div>
        
        <!-- Formulario derecho -->
        <div class="flex flex-col">
          <h2 class="text-3xl font-bold mb-2">Contáctanos!</h2>
          <p class="text-gray-400 mb-6">Escribinos tus dudas o proyectos en mente, es GRATIS!</p>
          
          <form class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <!-- Primera fila: Nombres y Apellidos -->
            <div class="space-y-2">
              <label for="nombres" class="block text-sm">Nombre</label>
              <input 
                type="text" 
                id="nombres" 
                placeholder="Nombre" 
                class="w-full bg-gris border border-gray-700 rounded px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
              />
            </div>
            
            <div class="space-y-2">
              <label for="apellidos" class="block text-sm">Apellido</label>
              <input 
                type="text" 
                id="apellidos" 
                placeholder="Apellido" 
                class="w-full bg-gris border border-gray-700 rounded px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
              />
            </div>
            
            <!-- Correo (ancho completo) -->
            <div class="space-y-2 col-span-2">
              <label for="correo" class="block text-sm">Correo</label>
              <input 
                type="email" 
                id="correo" 
                placeholder="Ej: abc@gmail.com" 
                class="w-full bg-gris border border-gray-700 rounded px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
              />
            </div>
            
            <!-- Celular (ancho completo) -->
            <div class="space-y-2 col-span-2">
              <label for="celular" class="block text-sm">Celular</label>
              <div class="flex">
                <div class="relative w-1/4">
                  <select 
                    id="pais" 
                    class="w-full bg-gris border border-gray-700 rounded-l px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
                  >
                    <option value="PY">PY</option>
                    <option value="AR">AR</option>
                    <option value="BR">BR</option>
                    <option value="UY">UY</option>
                    <option value="CL">CL</option>
                  </select>
                  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-400">
                    
                  </div>
                </div>
                <input 
                  type="tel" 
                  id="telefono" 
                  placeholder="(+595) 981 123 456" 
                  class="w-3/4 bg-gris border border-gray-700 rounded-r px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
                />
              </div>
            </div>
            
            <!-- Mensaje (ancho completo) -->
            <div class="space-y-2 col-span-2">
              <label for="mensaje" class="block text-sm">Algún mensaje</label>
              <textarea 
                id="mensaje" 
                rows="4" 
                placeholder="Algo que sea importante saberlo" 
                class="w-full bg-gris border border-gray-700 rounded px-3 py-2 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
              ></textarea>
            </div>
            
            <!-- Botón de envío (ancho completo) -->
            <div class="col-span-2 mt-2">
              <button 
                type="submit" 
                class="w-full cursor-pointer bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded transition-colors"
              >
                Enviar formulario
              </button>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Separador y botón WhatsApp -->
      <div class="text-center mt-12">
        <div class="max-w-lg mx-auto">
          <p class="mb-4 text-gray-400">O si preferís, escribinos directamente al WhatsApp:</p>
          <a 
            href="https://wa.me/+595982211731?text=Hola%20quiero%20más%20información%20sobre%20su%20sitio" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded transition"
          >
            <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
              <path d="M16.002 3C9.384 3 4 8.384 4 15.002c0 2.648.874 5.098 2.346 7.08L4 29l7.173-2.28A11.955 11.955 0 0 0 16.002 27C22.617 27 28 21.616 28 15.002 28 8.384 22.617 3 16.002 3zm0 21c-1.794 0-3.474-.48-4.937-1.314l-.35-.202-4.267 1.356 1.395-4.157-.219-.347A8.947 8.947 0 0 1 7 15.002C7 9.935 11.934 5 16.002 5 21.064 5 25 9.936 25 15.002 25 20.063 21.064 24 16.002 24zm4.89-6.537c-.265-.133-1.564-.773-1.807-.86-.242-.087-.418-.133-.593.132-.176.265-.68.86-.834 1.037-.153.176-.31.198-.575.066-.265-.132-1.12-.412-2.13-1.314-.787-.7-1.319-1.565-1.472-1.83-.154-.264-.017-.407.115-.538.118-.117.264-.31.396-.465.132-.154.176-.264.264-.44.087-.176.044-.33-.022-.462-.066-.132-.593-1.43-.814-1.958-.215-.518-.433-.448-.593-.456h-.5c-.154 0-.396.056-.604.264-.208.208-.79.773-.79 1.884 0 1.11.81 2.184.922 2.337.11.154 1.592 2.426 3.86 3.402.54.232.962.37 1.29.474.542.172 1.034.148 1.422.09.434-.065 1.32-.54 1.507-1.06.187-.52.187-.964.132-1.06-.055-.1-.242-.154-.507-.287z"/>
            </svg>
            Contactar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

<script>
  // Script para actualizar el placeholder del teléfono según el país seleccionado
  document.addEventListener('DOMContentLoaded', () => {
    const phoneData = {
      PY: { code: "+595", example: "(+595) 981 123 456" },
      AR: { code: "+54", example: "(+54) 11 1234 5678" },
      BR: { code: "+55", example: "(+55) 11 91234 5678" },
      UY: { code: "+598", example: "(+598) 99 123 456" },
      CL: { code: "+56", example: "(+56) 9 1234 5678" }
    };

    const paisSelect = document.getElementById('pais');
    const telefonoInput = document.getElementById('telefono');

    // Función para actualizar el placeholder según el país seleccionado
    function actualizarPlaceholder() {
      const paisSeleccionado = (paisSelect as HTMLSelectElement)?.value;
      if (!paisSeleccionado) return;

      const data = phoneData[paisSeleccionado as keyof typeof phoneData];
      if (data && telefonoInput instanceof HTMLInputElement) {
        telefonoInput.placeholder = data.example;
      }
    }

    // Actualizar cuando cambia la selección
    if (paisSelect) {
      paisSelect.addEventListener('change', actualizarPlaceholder);
    }
    
    // También actualizar al cargar la página
    actualizarPlaceholder();
  });
</script>